        </Grid>

        <DockPanel Grid.Column="0" Grid.Row="0" >



            <Viewbox Name="MainViewbox" Stretch="Uniform"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <Grid>
                <ItemsControl ItemsSource="{Binding Scene.ObstaclesCollection}" >
                    <ItemsControl.ItemContainerStyle >
                        <Style TargetType="ContentPresenter">

                            <Setter Property="Canvas.Left" Value ="{Binding From.X}"/>
                            <Setter Property="Canvas.Top" Value ="{Binding From.Y}"/>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    <ItemsControl.ItemsPanel >
                        <ItemsPanelTemplate>

                            <Canvas Name="MainCanvas"  Width="1000" Height="1000" Background="AliceBlue" MouseLeftButtonDown="MainCanvas_OnLeftMouseDown" MouseLeftButtonUp="MainCanvas_OnLeftMouseUp" MouseMove="MainCanvas_OnMouseMove" MouseRightButtonUp="MainCanvas_OnMouseRightButtonUp">

                            </Canvas >


                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                                <Rectangle Width="{Binding Size.X}" Height="{Binding Size.Y}" Fill="{Binding Color}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                    <Canvas Name="RobotCanvas" Width="1000" Height="1000"  MouseDown="MainCanvas_OnLeftMouseDown" MouseUp="MainCanvas_OnLeftMouseUp" MouseMove="MainCanvas_OnMouseMove">
                        <Ellipse Name ="TargetEllipse"  Fill="DodgerBlue" Width="30" Height="30" Canvas.Left="{Binding Scene.Target.X, Converter={StaticResource BaseConverter}}"  Canvas.Top="{Binding Scene.Target.Y, Converter={StaticResource BaseConverter}}" />

                        <Line X1="{Binding Scene.Robot.Point0.X}" Y1="{Binding Scene.Robot.Point0.Y}" X2="{Binding Scene.Robot.Point1.X}" Y2="{Binding Scene.Robot.Point1.Y}" Stroke="Black" StrokeThickness="5"></Line>
                        <Line X1="{Binding Scene.Robot.Point1.X}" Y1="{Binding Scene.Robot.Point1.Y}" X2="{Binding Scene.Robot.Point2.X}" Y2="{Binding Scene.Robot.Point2.Y}" Stroke="Black" StrokeThickness="5"></Line>

                      
                    </Canvas >
                </Grid>
            </Viewbox>

            <!--<Viewbox  Name="RobotViewBox" Stretch="Uniform"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >-->

            <!--</Viewbox>-->


        </DockPanel>

    </Grid>



</Window>
