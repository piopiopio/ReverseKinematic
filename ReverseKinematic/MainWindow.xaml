    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid  Grid.Column="1" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid  Grid.Row="0" Grid.ColumnSpan="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0"  Content="Calculate configuration space" Name="StopSimulation" Click="Calculate"></Button>
            <Button Grid.Row="0" Grid.Column="1"  Content="Clear scene" Name="ClearSceneButton" Click="ClearScene"></Button>
            <Button Grid.Row="0" Grid.Column="2"  Content="Staart animation" Name="StartAnimation" Click="ClearScene"></Button>
            </Grid>


        <Label Grid.Row="1" Content="L0:"></Label>
        <TextBox Grid.Row="1" Grid.Column="1" Name="L0" Text="{Binding Scene.Robot1.L0}"></TextBox>

        <Label Grid.Row="2" Content="L1:"></Label>
        <TextBox Grid.Row="2" Grid.Column="1" Name="L1" Text="{Binding Scene.Robot1.L1}"></TextBox>

        <Label Grid.Row="3" Grid.Column="0" Content="Show first:"></Label>
        <CheckBox Grid.Row="3" Grid.Column="1" IsChecked="{Binding Scene.ShowFirst}"></CheckBox>

        <Label Grid.Row="4" Grid.Column="0" Content="Show second:"></Label>
        <CheckBox Grid.Row="4" Grid.Column="1" IsChecked="{Binding Scene.ShowSecond}"></CheckBox>

        <Image  Grid.Row="5" Grid.ColumnSpan="10" Name="ConfigurationSpaceCanvas" Width="360" Height="360" Source="{Binding Scene.ConfigurationSpaceBitmap}"></Image>
        <!--<ItemsControl Grid.Row="3" Grid.ColumnSpan="10" ItemsSource="{Binding Scene.ConfigurationSpace}" >
