        xmlns:local="clr-namespace:ReverseKinematic" 
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Name="MainWindow1" WindowState="Maximized" SizeChanged="MainWindow_OnSizeChanged"  KeyDown="OnKeyDown" MinWidth="900">

    <Window.Resources>
        <local:BaseConverter x:Key="BaseConverter"/>
        <local:BoolToVisibleOrHidden x:Key="BoolToVisibleOrHidden"/>
        <system:Double x:Key="IntZero">15</system:Double>
    </Window.Resources>
